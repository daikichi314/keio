# Doxyfile for hkelec/fukazawa

# -------------------------------------------------------------------------
# 1. プロジェクトの基本設定
# -------------------------------------------------------------------------
# プロジェクト名（ブラウザのタイトルバーなどに表示されます）
PROJECT_NAME           = "HKElec Fukazawa Analysis"

# プロジェクトのバージョン番号
PROJECT_NUMBER         = 0.1

# ドキュメントの出力先ディレクトリ（この中にhtmlフォルダが作られます）
OUTPUT_DIRECTORY       = docs

# 入力ファイルのエンコーディング（Linux環境なら通常UTF-8）
DOXYFILE_ENCODING      = UTF-8

# -------------------------------------------------------------------------
# 2. 入力ファイルの設定
# -------------------------------------------------------------------------
# 解析対象とするディレクトリ（カレントディレクトリ "." を指定）
INPUT                  = .

# サブディレクトリも再帰的に探索するか
RECURSIVE              = YES

# 解析対象とするファイルの拡張子（C++のソースとヘッダを指定）
FILE_PATTERNS          = *.cc *.hh *.cpp *.h *.c

# -------------------------------------------------------------------------
# 3. ドキュメント生成の挙動
# -------------------------------------------------------------------------
# 出力言語を日本語に設定
OUTPUT_LANGUAGE        = Japanese

# Javadocスタイル（/** ... */）などのコメントを自動検知
JAVADOC_AUTOBRIEF      = YES

# コメントが書かれていない関数やクラスも一覧に含めるか（YES推奨）
EXTRACT_ALL            = YES

# プライベートメンバ（private変数など）も出力するか
EXTRACT_PRIVATE        = YES

# static関数なども出力するか
EXTRACT_STATIC         = YES

# -------------------------------------------------------------------------
# 4. 図の生成設定 (Graphviz/Dot が必要)
# -------------------------------------------------------------------------
# Graphvizを使って図を生成する設定（インストールされている必要があります）
HAVE_DOT               = YES

# クラスの継承関係図などを生成
UML_LOOK               = YES

# 関数ごとの「呼び出しグラフ（Call Graph）」を作成（解析に非常に便利です）
CALL_GRAPH             = YES

# 関数が「どこから呼ばれているか（Caller Graph）」を作成
CALLER_GRAPH           = YES

# インクルード関係（どのヘッダを読み込んでいるか）を図式化
INCLUDE_GRAPH          = YES

# -------------------------------------------------------------------------
# 5. ソースコードのブラウズ設定
# -------------------------------------------------------------------------
# ドキュメント内のリンクから、実際のソースコードを表示できるようにする
SOURCE_BROWSER         = YES

# その際、行番号を表示する
SOURCE_TOOLTIPS        = YES